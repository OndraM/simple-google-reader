{
    "name": "ondram/simple-google-reader",
    "description": "Super simple Google Spreadsheets and Google Docs reader",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "google",
        "google-api",
        "spreadsheets",
        "google-spreadsheets",
        "docs",
        "google-docs",
        "google-drive"
    ],
    "authors": [
        {
            "name": "Ond≈ôej Machulda",
            "email": "ondrej.machulda@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "cocur/slugify": "^4.3",
        "google/apiclient": "^2.13",
        "psr/simple-cache": "^1.0",
        "psr/simple-cache-implementation": "^1.0 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "cache/array-adapter": "^1.2",
        "cache/filesystem-adapter": "^1.1",
        "ergebnis/composer-normalize": "^2.20",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^10.5",
        "symfony/css-selector": "^6.0 || ^7.0",
        "symfony/dom-crawler": "^6.0 || ^7.0",
        "symfony/var-dumper": "^6.0 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "OndraM\\SimpleGoogleReader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OndraM\\SimpleGoogleReader\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "extra": {
        "google/apiclient-services": [
            "Docs",
            "Drive",
            "Sheets"
        ]
    },
    "scripts": {
        "pre-autoload-dump": "Google\\Task\\Composer::cleanup",
        "all": [
            "@lint",
            "@analyze",
            "@test"
        ],
        "analyze": [
            "vendor/bin/phpstan analyze -c phpstan.neon --ansi"
        ],
        "fix": [
            "@composer normalize"
        ],
        "lint": [
            "vendor/bin/parallel-lint -j 10 -e php ./src ./tests",
            "@composer validate",
            "@composer normalize --dry-run"
        ],
        "test": [
            "vendor/bin/phpunit --colors=always"
        ]
    }
}
